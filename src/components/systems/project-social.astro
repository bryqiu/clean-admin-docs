---
import { Icon } from 'astro-icon/components'
import { projectSocialList } from '@/config';
---

{
  projectSocialList.map(social => (
    <a
      class="not-content flex flex-col p-1 no-underline items-center justify-center rounded-lg hover:bg-slate-200 dark:hover:bg-slate-500 cursor-pointer duration-300"
      href={social.link}
      target="_blank"
      rel="noopener noreferrer"
    >
      <div class="flex p-1 items-center justify-center text-black dark:text-white">
        <Icon name={social.iconName} />
      </div>
      <span class="text-xs line-clamp-1 text-slate-900 dark:text-white">{social.name}</span>
    </a>
  ))
}

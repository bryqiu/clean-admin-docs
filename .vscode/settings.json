{
  // editor
  "editor.formatOnSave": true, // 保存时自动格式化
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true
  },

  // 鼠标平滑效果
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,

  // 单词拼写
  "cSpell.userWords": [
    "iconify",
    "Pinia",
    "vueuse",
    "Sider",
    "nprogress",
    "mingcute",
    "tailwindcss",
    "persistedstate",
    "echarts",
    "VITE",
    "Cascader",
    "brotli",
    "commitlint",
    "stylelint",
    "unplugin",
    "mockjs",
    "numbro",
    "wechat"
  ],

  // 忽略的文件
  "cSpell.ignorePaths": [
    "package-lock.yaml",
    "**/*.{svg,log}",
    "dist/**",
    "public/**",
    "node_modules/**"
  ]
}
